@page
@model FrogMusicFest.IndexModel

@{
    ViewData["Title"] = "Izvodjači";
}

<p>
    <a asp-page="Create">Dodaj novog izvodjača</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Izvodjac[0].Naziv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Izvodjac[0].VrstaMuzike)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Izvodjac[0].DanNastupa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Izvodjac[0].VremeNastupa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Izvodjac)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Naziv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VrstaMuzike)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DanNastupa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VremeNastupa)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Izmeni</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Detalji</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Izbriši</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="row">
    @foreach (var bend in Model.Izvodjac)
    {
        <div class="card col-md-4 " style="width: 18rem;">
            <img class="card-img-top " src="~/images/concert-984276_640.jpg" alt="Card image cap">
            <div class="card-body">
                <p class="card-text text-center">@bend.Naziv</p>
                <p class="card-text text-center">@bend.VrstaMuzike - @bend.DanNastupa</p>
                <p class="card-text text-center">@bend.VremeNastupa</p>

            </div>
        </div>
    }
</div>

